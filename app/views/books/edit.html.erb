<h1>Editing Book</h1>
<%= form_with model: @book, url:book_path(@book.id), method: :patch do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <div class="form-group">
    <%= f.submit 'Create Book' %>
  </div>
  <%=link_to "Show",book_path(@book.id) %>
  <%=link_to "Back",book_path %>
<% end %>