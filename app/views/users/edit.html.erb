<h2>User info</h2>

<%= form_with model: @user, url: user_path(@user.id), method: :patch do |f| %>
  <h4>Title</h4>
  <%= f.text_field :name %>
  <h4>Image</h4>
  <%= f.file_field :image, accept: "image/*", class: "w-100" %>
  <h4>Opinion</h4>
  <%= f.text_area :introduction %>

  <%= f.submit 'Update User' %>
<% end %>