<%= render 'books/list', user: @user, book: @book %>
<h2>Books</h2>
  <table class = "table table-hover table-inverse">
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <td>
          <%= link_to user_path(@user.id) do %>
            <%= image_tag @user.get_image(100, 100) %>
          <% end %>
        </td>
        <td>
          <%= link_to book_path(@book.id) do %>
            <%=@book.title %>
          <% end %>
        </td>
        <td>
          <%=@book.body %>
        </td>
      </tbody>
    </table>